<h2>로그인</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :label=>"이메일", :required => true, :autofocus => true %>
    <%= f.input :password, :label=>"비밀번호", :required => true %>
    <%= f.input :remember_me, :label=>"자동로그인", :as => :boolean if devise_mapping.rememberable? %>
  </div>
 
    <%= f.button :submit, "로그인", :class=>'btn btn-primary' %>

<% end %>

<div id="remote">
        <div id="services" class="box">
            <a href="/users/auth/facebook" class="services"><%= image_tag "facebook_64.png", :size => "64x64",  :alt => "Facebook" %>Facebook</a>
            <a href="/users/auth/twitter" class="services"><%= image_tag "twitter_64.png", :size => "64x64",  :alt => "Twitter" %>Twitter</a>
        </div>
    </div>

<%= render "devise/shared/links" %>
